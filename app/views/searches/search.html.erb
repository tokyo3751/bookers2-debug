<h2>Results index</h2>

<table class="table table-hover table-inverse">
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
   </thead>
  <% if @range == "User" %>
   <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
      </tr>
    <% end %>
   </tbody>
   <% else %>
   <tbody>
     <% @books.each do |book| %>
     <tr>
       <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
       <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
       <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
  <% end %>
</table>