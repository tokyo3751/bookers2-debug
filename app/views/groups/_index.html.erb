<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_image, size: '50x50' %></td>
        <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
        <td><%= group.introduction %></td>
        <td><%= group.group_users.count %></td>
        <% if group.is_owned_by?(current_user) %>
         <td><%= link_to "Edit", edit_group_path(group), class: "group_#{group.id} btn btn-success" %></td>
        <% end %>
      </tr>
     <% end %>
  </tbody>
</table>